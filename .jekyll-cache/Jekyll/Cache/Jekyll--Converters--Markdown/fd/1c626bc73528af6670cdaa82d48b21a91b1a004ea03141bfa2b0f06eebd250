ax2.fill(theta,hist_martel,color='r',alpha=0.3)

ax2.plot(theta,hist_star,color='cyan',marker='o',ls=':',ms=5,label='Star &amp; NonStar')
ax2.fill(theta,hist_star,color='cyan',alpha=0.3)

